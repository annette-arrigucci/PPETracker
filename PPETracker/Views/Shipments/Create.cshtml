            // - add it to the hidden selected table with a quantity of 1

           $('#ppe-table tbody').on('click', '#addButton', function (event) {
                event.preventDefault();
                var row = ppeTable.row($(this).parents('tr'));
                var rowNode = row.node();
                row.remove();

