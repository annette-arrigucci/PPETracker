@model PPETracker.ViewModels.ShipmentDetailViewModel

<div class="modal fade" id="shipDetailsModal" tabindex="-1" role="dialog" aria-labelledby="shipDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="modal-header">
                    <h3 class="modal-title">Shipment Details</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!--<h3 style="text-align: center; margin-bottom: 20px !important;">Are you sure you want to ship Shipment @@Model.ID?</h3>-->
                    <div class="row">
                        <div class="col-sm-6">
                            <dl>
                                <dt>
                                    @Html.DisplayNameFor(model => model.ID)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.ID)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.RecipientName)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.RecipientName)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.ShipStatus)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.ShipStatus)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.ScheduledShipDate)
                                </dt>
                                <dd>
                                    @Model.ScheduledShipDate.ToString("MM/dd/yy")
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.ActualShipDate)
                                </dt>
                                <dd>
                                    @if (Model.ActualShipDate == null)
                                    {
                                        <br />
                                    }
                                    else
                                    {
                                        @string.Format("{0:MM/dd/yy}", Model.ActualShipDate)
                                    }
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Comments)
                                </dt>
                                <dd>
                                    @if (Model.Comments == null)
                                    {
                                        <br />
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => model.Comments)
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-sm-6">
                            <h4>Items on Shipment</h4>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Quantity
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ProductsOnShipment)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Name</td>
                                            <td>@item.QuantityOnShipment</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                <div class="modal-footer">
                    
                </div>
        </div>
    </div>
</div>



