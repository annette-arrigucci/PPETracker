@model PPETracker.ViewModels.ShipmentDetailViewModel

    <div class="modal fade" id="shipShipmentModal" tabindex="-1" role="dialog" aria-labelledby="shipShipmentModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-controller="Shipment" asp-action="Ship" method="post" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-header">
                        <h5 class="modal-title">Ship Shipment</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h3 style="text-align: center; margin-bottom: 20px !important;">Are you sure you want to ship Shipment @Model.ID?</h3>
                        <div class="row">
                            <div class="col-sm-6">
                                <dl>
                                    @Html.HiddenFor(model => model.ID)
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ID)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ID)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RecipientName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.RecipientName)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ShipStatus)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ShipStatus)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ScheduledShipDate)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ScheduledShipDate)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ActualShipDate)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ActualShipDate)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Comments)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Comments)
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-sm-6">
                                <h4>Items on Shipment</h4>
                                <table>
                                    <thead>
                                        <tr>
                                            <th>
                                                Product ID
                                            </th>
                                            <th>
                                                Product Name
                                            </th>
                                            <th>
                                                Quantity
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model.ProductsOnShipment)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Name</td>
                                                <td>@item.QuantityOnShipment</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Ship Shipment</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


