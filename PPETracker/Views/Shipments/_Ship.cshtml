@model PPETracker.ViewModels.ShipmentDetailViewModel

    <div class="modal fade" id="shipShipmentModal" tabindex="-1" role="dialog" aria-labelledby="shipShipmentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <form asp-controller="Shipments" asp-action="Ship" method="post" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-header">
                        <h3 class="modal-title">Ship Shipment</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @if (ViewBag.HasZeroItems == true)
                        {
                            <h3 style="text-align: center; margin-bottom: 20px !important;">Shipment @Model.ID cannot be shipped with zero items</h3>
                        }
                        else
                        {
                            <h3 style="text-align: center; margin-bottom: 20px !important;">Are you sure you want to ship Shipment @Model.ID?</h3>
                        }
                        <div class="row">
                            <div class="col-sm-6">
                                <dl>
                                    @Html.HiddenFor(model => model.ID)
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ID)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ID)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RecipientName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.RecipientName)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ShipStatus)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ShipStatus)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ScheduledShipDate)
                                    </dt>
                                    <dd>
                                        @Model.ScheduledShipDate.ToString("MM/dd/yy")
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ActualShipDate)
                                    </dt>
                                    <dd>
                                        @if (Model.ActualShipDate == null)
                                        {
                                            <br />
                                        }
                                        else
                                        {
                                            @string.Format("{0:MM/dd/yy}", Model.ActualShipDate)
                                        }
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Comments)
                                    </dt>
                                    <dd>
                                        @if (Model.Comments == null)
                                        {
                                            <br />
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(model => model.Comments)
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-sm-6">
                                <h4>Items on Shipment</h4>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Name
                                            </th>
                                            <th>
                                                Quantity
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ProductsOnShipment)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Name</td>
                                                <td>@item.QuantityOnShipment</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @if (ViewBag.HasZeroItems == true)
                        {
                            <button type="submit" class="btn btn-primary" disabled>Ship Shipment</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary">Ship Shipment</button>
                        }
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                    <div class="modal-footer">
                        
                    </div>
                </form>
            </div>
        </div>
    </div>


